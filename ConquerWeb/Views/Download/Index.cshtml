@model List<ConquerWeb.Models.DownloadItem>

@{
    ViewData["Title"] = "Downloads";
    Layout = "_Layout";
}

<section class="page-title">
    <div class="overlay-bg"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-6 text-left">
                <h1>Downloads</h1>
            </div>
            <div class="col-md-6 text-right">
                <div aria-label="breadcrumb">
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/home">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Downloads</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container mt-5 mb-5">
    <h2>Game Files & Tools</h2>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>File Name</th>
                    <th>Size (MB)</th>
                    <th>Publish Date</th>
                    <th>Category</th>
                    <th>Download</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.File_Name</td>
                            <td>@item.File_Size_MB.ToString("N2")</td>
                            <td>@item.Publish_Date.ToShortDateString()</td>
                            <td>@item.Category</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Download_Url))
                                {
                                    <a href="@item.Download_Url" class="btn btn-sm btn-success" target="_blank">Download</a>
                                }
                                else
                                {
                                    <span>No Link</span>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center">No downloadable files found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>