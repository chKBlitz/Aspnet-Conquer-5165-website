@model List<ConquerWeb.Models.TopPlayer>

@{
    ViewData["Title"] = "Player Rankings";
    Layout = "_Layout";
}

<header class="bg-dark py-5">
    <div class="container px-5">
        <div class="row gx-5 align-items-center justify-content-center">
            <div class="col-lg-8 col-xl-7 col-xxl-6">
                <div class="my-5 text-center text-xl-start">
                    <h1 class="display-5 fw-bolder text-white mb-2">Player Rankings</h1>
                    <p class="lead fw-normal text-white-50 mb-4">See the top players by level, experience, and other statistics.</p>
                </div>
            </div>
            <div class="col-xl-5 col-xxl-6 d-none d-xl-block text-center">
                <img class="img-fluid rounded-3 my-5" src="~/images/icons/ranking_player_icon.png" alt="Player Rankings Icon" style="max-width: 250px; height: auto;" />
            </div>
        </div>
    </div>
</header>

<section class="py-5">
    <div class="container px-5">
        <div class="fast-button gx-5 mb-4 justify-content-center">
            <div class="col-auto">
                <a class="btn btn-primary btn-lg" href="/Ranking">Player Ranking</a>
            </div>
            <div class="col-auto">
                <a class="btn btn-secondary btn-lg" href="/Ranking/Guild">Guild Ranking</a>
            </div>
        </div>

        <h2 class="fw-bolder fs-5 mb-4">Top 30 Players by Level</h2>
        <div class="table-responsive">
            <table class="table table-striped table-hover nice_table">
                <thead>
                    <tr>
                        <td width="4%" class="text-center">#</td>
                        <td width="4%">Name</td>
                        <td width="4%">Level</td>
                        <td width="5%">Class</td>
                        <td width="4%">Guild</td>
                        <td width="4%">Nobility</td>
                        <td width="4%">VIP Level</td>
                        <td width="4%">Spouse</td>
                        <td width="4%">Avatar</td>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        int rank = 1;
                        foreach (var player in Model)
                        {
                            <tr>
                                <td class="text-center">@(rank++)°</td>
                                <td class="orange">@player.Name</td>
                                <td class="text-center">@player.Level</td>
                                <td class="text-center">@player.JobName</td>
                                <td class="text-center">@player.GuildName</td>
                                <td class="text-center">@player.Nobility</td>
                                <td class="text-center">@player.VIPLevel</td>
                                <td class="text-center">@(string.IsNullOrEmpty(player.Spouse) ? "None" : player.Spouse)</td>
                                <td class="text-center">@player.Avatar</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="text-center">No players found in ranking.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>