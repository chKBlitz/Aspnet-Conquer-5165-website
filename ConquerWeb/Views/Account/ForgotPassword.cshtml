@model ConquerWeb.Models.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Şifremi Unuttum";
    Layout = "_Layout";
}

<section class="page-title">
    <div class="overlay-bg"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h1>Şifremi Unuttum</h1>
            </div>
        </div>
    </div>
</section>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Şifrenizi Sıfırlayın</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Account" asp-action="ForgotPassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-info text-center" role="alert">
                                @ViewBag.Message
                            </div>
                        }

                        <p class="text-center">Şifrenizi sıfırlamak için kayıtlı email adresinizi girin.</p>

                        <div class="form-group mb-4">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Şifre Sıfırlama Bağlantısı Gönder</button>
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <p>Giriş ekranına geri dön <a href="/Login">Giriş Yap</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}